root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = off

[Dockerfile]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[{*.sh,*.bats,post_push,post_push.tmpl.php}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
